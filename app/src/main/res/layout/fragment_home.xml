<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/swipe_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/home_textureView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页  TextureView" />

            <Button
                android:id="@+id/home_mvp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页  MVP" />

            <Button
                android:id="@+id/home_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页  aliPay" />

            <Button
                android:id="@+id/home_switch_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页  语言切换" />

        </LinearLayout>

        <!--<com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            tools:ignore="MissingConstraints" />-->

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
